{
  "name": "Rocketstart",
  "description": "Maximize your opportunity to expand your professional network on LinkedIn through text analysis.",
  "version": "0.1",
  "offline_enabled": true,
  "manifest_version": 3,
  "icons": {
    "192": "assets/logo192.png",
    "512": "assets/logo512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.linkedin.com/*/"
  ],
  "permissions": ["scripting","activeTab","tabs"],
  "homepage_url": "https://rocketstart.careers/",

  "content_scripts": [
    {
      "js": ["listener.js"],
      "matches": ["https://www.linkedin.com/*/"]
    },
    {
      "js": ["profile.js"],
      "matches": ["https://www.linkedin.com/in/*/"]
    },
    {
      "js": ["network.js"],
      "matches": ["https://www.linkedin.com/mynetwork/"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["popup.html","assets/rocketstartLogo.svg"],
      "css": ["./assets/popup.css"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
